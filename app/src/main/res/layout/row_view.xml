<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/row_view_icon"
        android:background="@mipmap/coc_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textColor="#000000"
        android:id="@+id/row_view_accountName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/row_view_icon"
        android:layout_toEndOf="@+id/row_view_icon"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="#000000"
        android:id="@+id/row_view_delete"
        android:layout_alignTop="@+id/row_view_rename"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rename"
        android:textColor="#000000"
        android:id="@+id/row_view_rename"
        android:layout_alignBottom="@+id/row_view_icon"
        android:layout_toLeftOf="@+id/row_view_delete"
        android:layout_toStartOf="@+id/row_view_delete" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run"
        android:textColor="#000000"
        android:id="@+id/row_view_run"
        android:layout_alignTop="@+id/row_view_rename"
        android:layout_toLeftOf="@+id/row_view_rename"
        android:layout_toStartOf="@+id/row_view_rename" />



</RelativeLayout>